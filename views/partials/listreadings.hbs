  <thead>
    <tr>
      <th>Date/Time</th>
      <th>Code</th>
      <th>Temperature</th>
      <th>Wind Speed</th>
      <th>Wind Direction</th>
      <th>Pressure</th>
    </tr>
  </thead>
  <tbody>
    {{#each station.readings}}
      <tr>
        <td>
          {{date}}
        </td>
        <td>
          {{code}}
        </td>
        <td>
          {{temperature}} Â°C
        </td>
        <td>
          {{windSpeed}} kph
        </td>
        <td>
          {{windDirection}} degrees
        </td>
        <td>
          {{pressure}}hpa
        </td>
        <td>
